{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Pico-8 main.lua",
      "type": "shell",
      "command": "/Applications/PICO-8.app/Contents/MacOS/pico8",  // Or Windows path
      "args": [
        "-run",
        "${fileDirname}/main.p8"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}